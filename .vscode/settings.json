{
  "cSpell.words": [
    "bitbucket",
    "bun",
    "bunx",
    "buymeacoffee",
    "CHEATSHEET",
    "cmdr",
    "cmds",
    "dein",
    "deinsoftware",
    "Dsonar",
    "Eomm",
    "equiman",
    "esnext",
    "github",
    "gitlab",
    "lcov",
    "linux",
    "lockb",
    "Logomark",
    "nargs",
    "nmpjs",
    "npmignore",
    "npmjs",
    "npmrc",
    "optstrings",
    "outdir",
    "patreon",
    "paypal",
    "pnpm",
    "postbuild",
    "sade",
    "setx",
    "sonarcloud",
    "sonarsource",
    "spyb",
    "swpm",
    "swpx",
    "tryin",
    "unixish",
    "unpublish",
    "unstub",
    "versioner",
    "wslpath"
  ],
  "files.exclude": {
    "**/*.js.map": {
      "when": "$(basename)"
    },
    "**/node_modules": false
  },
  "javascript.autoClosingTags": true,
  "javascript.suggest.autoImports": true,
  "search.exclude": {
    "**/coverage": true,
    "**/node_modules": true
  },
  "typescript.autoClosingTags": true,
  "typescript.suggest.autoImports": true,
  "javascript.format.enable": false,
  "javascript.validate.enable": true,
  "typescript.format.enable": false,
  "typescript.validate.enable": true,
  "editor.formatOnSave": true,
  "eslint.validate": [
    "javascript",
    "typescript",
  ],
  "[javascript][typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.formatDocument": true,
      "source.fixAll.eslint": true
    },
  },
  "explorer.fileNesting.patterns": {
    "README*": "BRAND*, CHANGELOG*, CODE_OF_CONDUCT.md, CONTRIBUTING.md, LICENSE*, README*, CHEATSHEET*, TEMPLATES*",
    "package*": "sonar-project*, .gitignore, bunfig.toml, .npmignore, .eslintignore, .eslintrc.cjs, bun.lockb, tsconfig.json, vitest.config.ts, globals.d.ts, build.ts",
    "*.js": "$(capture).*.js, $(capture).d.js.map, $(capture)_*.js, $(capture)*.snap",
    "*.ts": "$(capture).*.ts, $(capture).d.ts.map, $(capture)_*.ts, $(capture)*.snap",
  },
  "sonarlint.connectedMode.project": {
    "connectionId": "dein-vscode",
    "projectKey": "dein:swpm"
  },
  "markdownlint.config": {
    "MD024": {
      "siblings_only": true,
      "allow_different_nesting": true
    }
  },
  "testing.automaticallyOpenPeekView": "never",
  "bun.debugTerminal": {},
  "bun.runtime": "~/.bun/bin/bun",
  // If support for Bun should be added to the default "JavaScript Debug Terminal".
  "enabled": true,
  // If the debugger should stop on the first line of the program.
  "stopOnEntry": false,
}