{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "swpm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/cli/swpm.ts"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "info",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/cli/swpm.ts",
      "args": [
        "--info"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "add global",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/cli/swpm.ts",
      "args": [
        "add",
        "public-ip-cli",
        "--global",
        "--use",
        "npm"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "remove global",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/cli/swpm.ts",
      "args": [
        "rm",
        "public-ip-cli",
        "--global",
        "--use",
        "npm"
      ]
    }
  ]
}