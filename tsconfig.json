{
    "compilerOptions": {
        // add Bun type definitions
        "types": [
            "bun-types"
        ],
        // enable latest features
        "lib": [
            "esnext"
        ],
        "module": "esnext",
        "target": "esnext",
        // if TS 5.x+
        "moduleResolution": "bundler",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "moduleDetection": "force",
        "allowJs": false, // allow importing `.js` from `.ts`
        "esModuleInterop": false, // allow default imports for CommonJS modules
        // best practices
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "flags/*": [
                "./src/flags/*"
            ],
            "helpers/*": [
                "./src/helpers/*"
            ],
            "packages/*": [
                "./src/packages/*"
            ],
        },
    }
}